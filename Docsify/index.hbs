<html>
<head>
  <title>{{title}}</title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta charset="UTF-8">
  <link rel="stylesheet" href="{{uri}}_d/themes/{{theme}}.css">
</head>
<body>
  <div id="app"></div>
  <script>
    window.$docsify = {{{options}}}
  </script>
  <script src="{{uri}}_d/docsify.min.js"></script>
  {{#each plugins}}
  <script src="{{../uri}}_d/plugins/{{this}}.min.js"></script>
  {{/each}}
  {{#each langs}}
  <script src="{{../uri}}_p/prism-{{this}}.min.js"></script>
  {{/each}}
  {{#if mermaid}}
  <script src="{{uri}}_m/mermaid.min.js"></script>
  <script>
    mermaid.initialize({{{mermaidOptions}}});

    window.$docsify.markdown = { 
      renderer: { 
        code: function(code, lang) { 
          if (lang==="mermaid") {
            var style = "";
            if (code.startsWith("style=")) {
              style = code.substring(0, code.indexOf("\n"));
              code = code.substring(code.indexOf("\n"));
            }
            return '<div class="mermaid"' + style + '>' + code + "</div>";
          } 
          return this.origin.code.apply(this, arguments); 
        } 
      } 
    }
  </script>
  <style>
    div.mermaid {
        font-family: 'trebuchet ms', verdana, arial;
    }
  </style>
  {{/if}}
  {{#if liveupdate}}
  <script>
    var ws;
    function fnConnect() {
      ws = new WebSocket("ws://" + location.host + "/ws");
      ws.onopen = function(e) { };

      ws.onmessage = function(event) {
        console.log("[message websockets] data=" + event.data);
        if (event.data == "reload") location.reload();
      };

      ws.onclose = function(event) {
        fnConnect();
      };

      ws.onerror = function(error) {
        console.log("[error websockets] " + error.message);
      };
    }

    fnConnect();
  </script>
  {{/if}}
</body>
</html>