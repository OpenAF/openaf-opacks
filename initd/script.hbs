#!/bin/sh
### BEGIN INIT INFO
# Provides:          {{initdScript}}
# Required-Start:    $local_fs $network
# Required-Stop:     $local_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: {{initdScript}}
# Description:       {{initdScript}}
### END INIT INFO

case "$1" in

start)
	nohup sudo -u {{user}} {{openafPath}}/openaf --{{cmd}} {{openafScript}} -e "$@{{#if params}} {{/if}}{{params}}" >> {{logPath}} 2>&1 &
	echo "Log: {{logPath}}"
	;;

restart)
	nohup sudo -u {{user}} {{openafPath}}/openaf --{{cmd}} {{openafScript}} -e "$@{{#if params}} {{/if}}{{params}}" >> {{logPath}} 2>&1 &
	echo "Log: {{logPath}}"
	;;

stop)
	nohup sudo -u {{user}} {{openafPath}}/openaf --{{cmd}} {{openafScript}} -e "$@{{#if params}} {{/if}}{{params}}" >> {{logPath}} 2>&1 &
	echo "Log: {{logPath}}"
	;;

forcestop)
	nohup sudo -u {{user}} {{openafPath}}/openaf --{{cmd}} {{openafScript}} -e "$@{{#if params}} {{/if}}{{params}}" >> {{logPath}} 2>&1 &
	echo "Log: {{logPath}}"
	;;

status)
	sudo -u {{user}} {{openafPath}}/openaf --{{cmd}} {{openafScript}} -e "status"
	;;

*)	
	echo "Usage {{initdScript}} {start|stop|forcestop|restart|status}"
	;;
esac

exit 0
